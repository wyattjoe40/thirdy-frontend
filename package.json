  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "autobind-decorator": "^2.4.0",
    "local-storage": "^2.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-modal": "^3.11.2",
    "react-outside-click-handler": "^1.3.0",
    "react-responsive": "^8.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "superagent": "^5.3.1",
    "superagent-promise": "^1.1.0"
  },
  "scripts": {
    "start": "REACT_APP_ENVIRONMENT='dev' REACT_APP_BACKEND_URL='http://localhost:3001/api' npm run watch:css && react-scripts start",
    "build:prod": "REACT_APP_ENVIRONMENT='production' REACT_APP_BACKEND_URL='https://thirdy-backend.azurewebsites.net/api' npm run build:css && react-scripts build",
    "build:staging": "REACT_APP_ENVIRONMENT='staging' REACT_APP_BACKEND_URL='https://thirdy-backend-staging.azurewebsites.net/api' npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss src/assets/tailwind.css -o src/assets/main.css",
    "watch:css": "postcss src/assets/tailwind.css -o src/assets/main.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "postcss-cli": "^7.1.1",
    "tailwindcss": "^1.6.2"
  }
}
